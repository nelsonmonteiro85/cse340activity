<!-- In account/management.ejs -->
<% include("../partials/header.ejs") %>

<h1>Account Management</h1>

<% if (user) { %>
  <h2>Welcome, <%= user.account_firstname %>!</h2>
  <a href="/account/edit/<%= user.account_id %>">Update account information</a>

  <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/management">Manage Inventory</a></p>
  <% } %>

<% } else { %>
  <p>You are not logged in. Please <a href="/account/login">login</a> first.</p>
<% } %>

<% if (typeof messages !== "undefined" && messages.notice) { %>
  <div class="notice"><%= messages.notice %></div>
<% } %>

<% if (typeof messages !== "undefined" && messages.error) { %>
  <div class="error"><%= messages.error %></div>
<% } %>

<% include("../partials/footer.ejs") %>
