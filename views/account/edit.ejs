<% include("../partials/header.ejs") %>

<section id="edit-account">
    <h1 class="form-title">Update Account Information</h1>

    <% if (messages.error) { %>
        <div class="error">
            <ul>
                <% messages.error.forEach(error => { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <% if (messages.success) { %>
        <div class="success"><%= messages.success %></div>
    <% } %>

    <form action="/account/update" method="post" class="form-container">
        <div class="form-group">
            <label for="account_firstname" class="form-label">First Name:</label>
            <input type="text" id="account_firstname" name="account_firstname" class="form-input" required value="<%= user.account_firstname %>">
        </div>

        <div class="form-group">
            <label for="account_lastname" class="form-label">Last Name:</label>
            <input type="text" id="account_lastname" name="account_lastname" class="form-input" required value="<%= user.account_lastname %>">
        </div>

        <div class="form-group">
            <label for="account_email" class="form-label">Email:</label>
            <input type="email" id="account_email" name="account_email" class="form-input" required value="<%= user.account_email %>">
        </div>

        <button type="submit" class="form-submit-btn">Update Account</button>
    </form>

    <section id="change-password">
        <h2>Change Password</h2>
        <form action="/account/change-password" method="post" class="form-container">
            <input type="hidden" name="account_id" value="<%= user.account_id %>">
            <div class="form-group">
                <label for="account_password" class="form-label">New Password:</label>
                <input type="password" id="account_password" name="account_password" class="form-input" required>
                <p class="password-tooltip">Password must be at least 12 characters long, contain at least one uppercase letter, one number, and one special character.</p>
            </div>
            <button type="submit" class="form-submit-btn">Change Password</button>
        </form>
    </section>

</section>

<% include("../partials/footer.ejs") %>
